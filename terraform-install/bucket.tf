# S3 Webserver Bucket for signup form hosting

resource "aws_s3_bucket" "slack-signup" {
  bucket = "s3-website-slack-signup.yourdomain.com"
  acl    = "public-read"
  policy = "${file("policy.json")}"

  website {
    index_document = "index.html"
    error_document = "error.html"

    routing_rules = <<EOF
[{
    "Condition": {
        "KeyPrefixEquals": "docs/"
    },
    "Redirect": {
        "ReplaceKeyPrefixWith": "documents/"
    }
}]
EOF
  }
}
